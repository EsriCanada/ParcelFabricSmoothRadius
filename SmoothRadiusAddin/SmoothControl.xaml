<UserControl x:Class="SmoothRadiusAddin.SmoothControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Height="130" Width="300" MinWidth="300">
    <DockPanel>
        <Grid DockPanel.Dock="Top">
            <StackPanel>
                <TextBox Margin="5" Text="{Binding Value, FallbackValue=Value}"></TextBox>
                <Slider Margin="5" Minimum="{Binding Min}" Maximum="{Binding Max}" Value="{Binding Value}" IsSnapToTickEnabled="True" TickFrequency="0.01"></Slider>
                <Grid>
                    <TextBlock Margin="5" Text="{Binding Min, FallbackValue=Min}"/>
                    <TextBlock Margin="5" HorizontalAlignment="Right" Text="{Binding Max, FallbackValue=Max}"/>
                </Grid>
            </StackPanel>
        </Grid>
        <Expander Margin="5" Header="{Binding WarningCount}">
            <Expander.HeaderTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Path=., StringFormat=Segment Details ({0} Warnings)}">
                    </TextBlock>
                </DataTemplate>
            </Expander.HeaderTemplate>
            <Grid MinHeight="140">
                <ScrollViewer MaxHeight="400">
                    <ListView ItemsSource="{Binding m_curves}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="OID" Width="50" DisplayMemberBinding="{Binding ObjectID}" />
                                <GridViewColumn Header="Radius" Width="75" DisplayMemberBinding="{Binding Radius}" />
                                <GridViewColumn Header="Centerpoint" Width="75" DisplayMemberBinding="{Binding CenterpointID}" />
                                <GridViewColumn Header="Is Curve" Width="50" DisplayMemberBinding="{Binding IsCurve}" />
                            </GridView>
                        </ListView.View>
                        <ListView.Resources>
                            <ContextMenu x:Key="ItemContextMenu">
                                <MenuItem Header="Flash Feature" Click="Flash_Click" CommandParameter="{Binding}"></MenuItem>
                                <MenuItem Header="Exclude Feature" Click="Exclude_Click" CommandParameter="{Binding}"></MenuItem>
                            </ContextMenu>
                        </ListView.Resources>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="{x:Type ListViewItem}" >
                                <Setter Property="ContextMenu" Value="{StaticResource ItemContextMenu}" />
                                <Setter Property="ToolTip" Value="{Binding Warning}" />
                                <Setter Property="FontWeight" Value="{Binding ListFontWieght}" />
                            </Style>
                        </ListView.ItemContainerStyle>
                        
                    </ListView>
                </ScrollViewer>
            </Grid>
        </Expander>
    </DockPanel>
</UserControl>
